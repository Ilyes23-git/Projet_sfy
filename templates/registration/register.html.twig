{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <style>
        .register-wrapper {
            min-height: 70vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .register-form {
            width: 100%;
            max-width: 450px;
            padding: 30px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #fff;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        .register-form .form-control {
            padding: 10px;
            font-size: 14px;
            margin-bottom: 15px;
        }
    </style>

    <div class="register-wrapper">
        <div class="register-form">
            <h2>Register</h2>

            {{ form_start(registrationForm) }}

            <div class="form-group">
                {{ form_widget(registrationForm.nom, {
                    attr: { class: 'form-control', placeholder: 'First Name' }
                }) }}
                {{ form_errors(registrationForm.nom) }}
            </div>

            <div class="form-group">
                {{ form_widget(registrationForm.prenom, {
                    attr: { class: 'form-control', placeholder: 'Last Name' }
                }) }}
                {{ form_errors(registrationForm.prenom) }}
            </div>

            <div class="form-group">
                {{ form_widget(registrationForm.email, {
                    attr: { class: 'form-control', placeholder: 'Email' }
                }) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div class="form-group">
                {{ form_widget(registrationForm.telephone, {
                    attr: { class: 'form-control', placeholder: 'Phone Number' }
                }) }}
                {{ form_errors(registrationForm.telephone) }}
            </div>

            <div class="form-group">
                {{ form_widget(registrationForm.adresse, {
                    attr: { class: 'form-control', placeholder: 'Address' }
                }) }}
                {{ form_errors(registrationForm.adresse) }}
            </div>

            <div class="form-group">
                {{ form_widget(registrationForm.plainPassword, {
                    attr: { class: 'form-control', placeholder: 'Password' }
                }) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>


            <div class="form-group">
                <h6>agreeTerms:</h6>
                {{ form_widget(registrationForm.agreeTerms)}}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <button class="btn btn-primary w-100">Register</button>

            {{ form_end(registrationForm) }}

            <div class="text-center mt-3">
                <a href="{{ path('app_login') }}">Already have an account? Login</a>
            </div>
        </div>
    </div>
{% endblock %}
