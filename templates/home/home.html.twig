    </div>
</div>
<!-- /SECTION -->

<!-- SECTION -->
<div class="section">
    <div class="container">
        <div class="row">
            <!-- section title -->
            <div class="col-md-12">
                <div class="section-title">
                    <h3 class="title">New Products</h3>
                    <div class="section-nav">
                        <ul class="section-tab-nav tab-nav">
                                  {% for c in categorie|slice(0, 4) %}
                                    <li class="{% if loop.first %}active{% endif %}">
                                           <a data-toggle="tab" href="#cat{{ c.id }}">
                                               {{ c.nom }}
                                                  </a>
                                                </li>
                                  {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
            <!-- /section title -->

            <div class="col-md-12">
       <div class="row">
    <div class="products-tabs">
        <div id="tab1" class="tab-pane active">
            <div class="products-slick" data-nav="#slick-nav-1">
                {% for produit in produits %}
                    <div class="product">
                        <div class="product-img">
                            <img src="{{ asset('img/product07.png') }}" alt="{{ produit.nom }}">
                            <div class="product-label">
                                {% if produit.prixPromo %}
                                    <span class="sale">-{{ produit.prixPromo }}%</span>
                                {% endif %}
                                <span class="new">NEW</span>
                            </div>
                        </div>
                        <div class="product-body">
                            <p class="product-category">{{ produit.categorie.nom }}</p>
                            <h3 class="product-name"><a href="#">{{ produit.nom }}</a></h3>
                            <h4 class="product-price">
                                {% if produit.prixPromo %}
                                    ${{ (produit.prix * (1 - produit.prixPromo / 100))|number_format(2, '.', ',') }}
                                    <del class="product-old-price">${{ produit.prix|number_format(2, '.', ',') }}</del>
                                {% else %}
                                    ${{ produit.prix|number_format(2, '.', ',') }}
                                {% endif %}
                            </h4>
                            <div class="product-rating">
                                {% for star in 1..5 %}
                                    <i class="fa fa-star"></i>
                                {% endfor %}
                            </div>
                            <div class="product-btns">
                                <button class="quick-view">
                                    <i class="fa fa-eye"></i>
                                    <span class="tooltipp">quick view</span>
                                </button>
                            </div>
                        </div>
                        <div class="add-to-cart">
                            <button class="add-to-cart-btn">
                                <i class="fa fa-shopping-cart"></i> add to cart
                            </button>
                        </div>
                    </div>
                {% else %}
                    <p>No products found in this category.</p>
                {% endfor %}
            </div>
            <div id="slick-nav-1" class="products-slick-nav"></div>
        </div>
    </div>
</div>
 </div>

        </div>
    </div>
</div>

<!-- HOT DEAL SECTION -->
<div id="hot-deal" class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="hot-deal">
                    <ul class="hot-deal-countdown">
                        <li><div><h3>02</h3><span>Days</span></div></li>
                        <li><div><h3>10</h3><span>Hours</span></div></li>
                        <li><div><h3>34</h3><span>Mins</span></div></li>
                        <li><div><h3>60</h3><span>Secs</span></div></li>
                    </ul>
                    <h2 class="text-uppercase">hot deal this week</h2>
                    <p>New Collection Up to 50% OFF</p>
                    <a class="primary-btn cta-btn" href="#">Shop now</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Repeat similar fixes for Top Selling sections -->

{% endblock %}
